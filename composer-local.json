{
  "name": "planet4-netherlands/planet4-netherlands",
  "description": "Greenpeace P4 Netherlands",
  "license": "MIT",
  "require": {
    "greenpeace/planet4-child-theme-netherlands": "dev-main",
    "wpackagist-plugin/wordpress-seo": "23.9.*"
  },
  "scripts": {
    "core:language": "wp language core install nl_NL; wp language core activate nl_NL",
    "install:plugin-yoast": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/wordpress-seo-premium-23.9.zip",
    "install:plugin-cs-core":"wp plugin install --debug --activate https://update-v1.campaignsuite.nl/core/campaignsuite-core-1.7.21.zip",
    "install:plugin-cs-forms":"wp plugin install --activate https://update-v1.campaignsuite.nl/forms/campaignsuite-forms-1.13.1.zip",
    "install:plugin-cs-gp":"wp plugin install --activate https://update-v1.campaignsuite.nl/greenpeace/campaignsuite-greenpeace-addon.zip",
    "site:custom": [
      "@install:plugin-yoast",
      "@install:plugin-cs-core",
      "@install:plugin-cs-forms",
      "@install:plugin-cs-gp",
      "@core:language"
    ]
  }
}
